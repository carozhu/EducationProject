<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >



    <kr.pe.burt.android.lib.faimageview.FAImageView
        android:src="@mipmap/cat_angry0000"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!--drink-->
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="milk"
            android:textSize="17dp"
            android:onClick="playangryAnimationdrinkmilk"
           />

        <!--foot_right-->
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="foot_right"
            android:textSize="17dp"
            android:onClick="playangryAnimationFootRight"
            />



        <!--drink-->
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="foot_left"
            android:textSize="17dp"
            android:onClick="playangryAnimationFootLeft"
            />

    </LinearLayout>

</LinearLayout>